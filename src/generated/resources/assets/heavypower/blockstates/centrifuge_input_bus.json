{
  "multipart": [
    {
      "apply": {
        "model": "heavypower:block/centrifuge_input_bus/down"
      },
      "when": {
        "facing": "down"
      }
    },
    {
      "apply": {
        "model": "heavypower:block/centrifuge_input_bus/up"
      },
      "when": {
        "facing": "up"
      }
    },
    {
      "apply": {
        "model": "heavypower:block/centrifuge_input_bus/north"
      },
      "when": {
        "facing": "north"
      }
    },
    {
      "apply": {
        "model": "heavypower:block/centrifuge_input_bus/north",
        "y": 180
      },
      "when": {
        "facing": "south"
      }
    },
    {
      "apply": {
        "model": "heavypower:block/centrifuge_input_bus/north",
        "y": 90
      },
      "when": {
        "facing": "east"
      }
    },
    {
      "apply": {
        "model": "heavypower:block/centrifuge_input_bus/north",
        "y": 270
      },
      "when": {
        "facing": "west"
      }
